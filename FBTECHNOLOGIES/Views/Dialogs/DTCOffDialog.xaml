<Window x:Class="FBTECHNOLOGIES.Views.Dialogs.DTCOffDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FBTECHNOLOGIES.Views.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="DTCOffDialog" Height="150" Width="350">
     <Grid>
        <TextBlock Text="Are you sure you want to turn off DTC?" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 20">
            <Button Content="Yes" Width="80" Margin="10" Click="YesBtn_Click"/>
            <Button Content="Cancel" Width="80" Margin="10" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
