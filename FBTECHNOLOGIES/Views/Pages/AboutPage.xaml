<Page x:Class="FBTECHNOLOGIES.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FBTECHNOLOGIES.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage">

    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,50,0,0">
        <!-- About Us Title -->
        <TextBlock Text="About Us" 
   HorizontalAlignment="Center" 
   Foreground="#ffffff" 
   FontSize="30" 
   FontWeight="Bold" />
        <Grid   Margin="0 30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel  HorizontalAlignment="Center" >
                <StackPanel Margin="0 0 0 30">

                    <TextBlock Text="Our Website" FontWeight="Bold"
           HorizontalAlignment="Center"
           Foreground="#ffffff"
           FontSize="20" Margin="0 0 0 10" />
                    <TextBlock Text="adi-performance.com"
           HorizontalAlignment="Center"
           Foreground="#0B97D4" TextDecorations="Underline"
           FontSize="20" />
                </StackPanel>
                <StackPanel Margin="0 0 0 30">

                    <TextBlock Text="Update" FontWeight="Bold"
           HorizontalAlignment="Center"
           Foreground="#ffffff"
           FontSize="20" Margin="0 0 0 10" />
                    <TextBlock Text="adi-performance.com" 
           HorizontalAlignment="Center"
           Foreground="#0B97D4" TextDecorations="Underline"
           FontSize="20" />
                </StackPanel>
                <StackPanel Margin="0 0 0 30">

                    <TextBlock Text="News" FontWeight="Bold"
           HorizontalAlignment="Center"
           Foreground="#ffffff"
           FontSize="20" Margin="0 0 0 10" />
                    <TextBlock Text="adi-performance.com"
           HorizontalAlignment="Center"
           Foreground="#0B97D4" TextDecorations="Underline"
           FontSize="20" />
                </StackPanel>
                <StackPanel Margin="0 0 0 30">

                    <TextBlock Text="Phone number" FontWeight="Bold"
           HorizontalAlignment="Center"
           Foreground="#ffffff"
           FontSize="20" Margin="0 0 0 10" />
                    <TextBlock Text="055154564564"
           HorizontalAlignment="Center"
           Foreground="#0B97D4" TextDecorations="Underline"
           FontSize="20" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</Page>
