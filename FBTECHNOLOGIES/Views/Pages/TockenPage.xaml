<Page x:Class="FBTECHNOLOGIES.Views.Pages.TockenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FBTECHNOLOGIES.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TockenPage">
    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="20" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Page.Resources>
    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,50,0,0">
        <TextBlock Text="Token" 
               HorizontalAlignment="Center" 
               Foreground="#ffffff" 
               FontSize="30" 
               FontWeight="Bold" />
        <StackPanel Height="20" />

        <StackPanel HorizontalAlignment="Left" Margin="20 20" Orientation="Horizontal">
            <StackPanel>
                <TextBlock Margin="0 10" FontWeight="Bold" Text="Token number" Foreground="White" Width="200" FontSize="16" />
                <TextBox BorderThickness="0" Background="#1A387F" x:Name="FirstNameTextBox" Width="200" Height="45" Foreground="White" VerticalContentAlignment="Center" FontSize="14" />
            </StackPanel>
            <StackPanel Width="200" />
            <StackPanel>
                <TextBlock Text="Buy Token" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="White" />
                <Button Margin="0 20" Background="#0C96D3" Foreground="White" Width="200" Height="45"
                    HorizontalAlignment="Center" Style="{StaticResource RoundedButtonStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/images/Buy.png" Width="20" Height="20" Margin="0 3 8 0" VerticalAlignment="Center" />
                        <TextBlock FontSize="18" FontWeight="Bold" Foreground="#070F22" Text="Buy token" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>