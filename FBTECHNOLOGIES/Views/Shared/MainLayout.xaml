<UserControl x:Class="FBTECHNOLOGIES.Views.Shared.MainLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FBTECHNOLOGIES.Views.Shared"
             xmlns:userControls="clr-namespace:FBTECHNOLOGIES.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#070F22">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".1*"/>
            <!-- Sidebar -->
            <ColumnDefinition Width=".9*"/>
            <!-- Con tent Area -->
        </Grid.ColumnDefinitions>

        <!-- Header Section -->
        <userControls:Header Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center"/>

        <!-- Sidebar Section -->
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Button Content="Home" Click="NavigateToHome" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Style="{StaticResource {x:Type Button}}" Margin="0 10 0 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <Ellipse Fill="#0D1B33" Width="50" Height="50" />
                                <Image Source="/images/HomeIcon.png" Width="24" Height="24" />
                            </Grid>
                            <!--<TextBlock Text="Home" Foreground="White" FontSize="16" VerticalAlignment="Center" /> -->
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Settings" Click="NavigateToSettings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Style="{StaticResource {x:Type Button}}" Margin="0 10 0 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <Ellipse Fill="#0D1B33" Width="50" Height="50" />
                                <Image Source="/images/SettingsIcon.png" Width="24" Height="24" />
                            </Grid>
                            <!--<TextBlock Text="Settings" Foreground="White" FontSize="16" VerticalAlignment="Center" /> -->
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Tickets" Click="NavigateToTickets" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Style="{StaticResource {x:Type Button}}" Margin="0 10 0 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <Ellipse Fill="#0D1B33" Width="50" Height="50" />
                                <Image Source="/images/TicketsIcon.png" Width="24" Height="24" />
                            </Grid>
                            <!--<TextBlock Text="Documents" Foreground="White" FontSize="16" VerticalAlignment="Center" /> -->
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Documents" Click="NavigateToAbout" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Style="{StaticResource {x:Type Button}}" Margin="0 10 0 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <Ellipse Fill="#0D1B33" Width="50" Height="50" />
                                <Image Source="/images/AboutIcon.png"  Width="24" Height="24" Margin="12 15 10 10"  />
                            </Grid>
                            <!--<TextBlock Text="Documents" Foreground="White" FontSize="16" VerticalAlignment="Center" /> -->
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Logout" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Style="{StaticResource {x:Type Button}}" Margin="0 10 0 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <Ellipse Fill="#0D1B33" Width="50" Height="50" />
                                <Image Source="/images/logoutIcon.png" Margin="5 0 0 0" Width="20" Height="20" />
                            </Grid>
                            <!-- <TextBlock Text="Logout" Foreground="White" FontSize="16" VerticalAlignment="Center" /> -->
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <Frame x:Name="MainContentFrame" Grid.Column="1" Grid.Row="1" Margin="0,50,0,0" NavigationUIVisibility="Hidden" />






        <!-- Footer Section -->
        <userControls:Footer Grid.Row="3" Grid.Column="2" Margin="0 0 30 0 " />
        <Image Source="/images/BackgroundImage.png" Opacity="0.5" Panel.ZIndex="-1"
Grid.RowSpan="3" 
Grid.ColumnSpan="2"  />
    </Grid>
</UserControl>
