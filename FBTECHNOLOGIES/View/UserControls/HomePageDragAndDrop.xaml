<UserControl x:Class="FBTECHNOLOGIES.View.UserControls.HomePageDragAndDrop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FBTECHNOLOGIES.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0 80 0 0 ">
        <TextBlock  HorizontalAlignment="Center" Text="Drag or Drop your file" Opacity=".4" Foreground="#ffffff" Grid.Column="1" Grid.Row="1" FontSize="60" FontWeight="Bold" />
        <Button Margin="0 30 0 0" Background="#0C96D3" Foreground="White" Width="130" Height="40"
            HorizontalAlignment="Center" Style="{StaticResource RoundedButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image Source="/images/LockIcon.png" Width="20" Height="20" Margin="0 0 10 0" />
                <TextBlock FontSize="17" FontWeight="Bold" Foreground="#05223D" Text="Open" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
